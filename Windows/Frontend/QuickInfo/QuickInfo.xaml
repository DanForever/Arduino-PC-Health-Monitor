<UserControl x:Class="HardwareMonitor.QuickInfo.QuickInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HardwareMonitor"
             xmlns:qi="clr-namespace:HardwareMonitor.QuickInfo"
             x:Name="QI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border
                    Background="White"
                    BorderBrush="Orange"
                    BorderThickness="2">
            <StackPanel>
                <DataGrid ItemsSource="{Binding Devices, RelativeSource={RelativeSource AncestorType={x:Type qi:QuickInfo}}}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
